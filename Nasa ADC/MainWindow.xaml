<Window x:Class="Nasa_ADC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Nasa_ADC"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" ResizeMode="CanMinimize">
	<Grid>

		<!-- The Altitude, Latitude, and Longitude of Each Componenet -->
		<Label x:Name="pos1c" Content="" HorizontalAlignment="Left" Margin="240,25,0,0" VerticalAlignment="Top" Height="30" Width="552"/>
		<Label x:Name="pos2c" Content="" HorizontalAlignment="Left" Margin="240,50,0,0" VerticalAlignment="Top" Height="30" Width="552"/>
		<Label x:Name="pos3c" Content="" HorizontalAlignment="Left" Margin="240,75,0,0" VerticalAlignment="Top" Height="30" Width="552"/>

		<!-- Scale Factor is 0.005 -->
		<!-- Altitude Graph -->
		<!-- LAS -->
		<Rectangle x:Name="altimeter_las"  Width="100" Margin="240, 285, 454, 138" Fill="DarkBlue"/>
		<!-- Command Module -->
		<Rectangle x:Name="altimeter_cm"  Width="100" Margin="450, 285, 244, 138" Fill="DarkGreen"/>
		<!-- Main Thruster -->
		<Rectangle x:Name="altimeter_bstr"  Width="100" Margin="660, 285, 34, 138" Fill="DarkRed"/>

		<!-- The Yaw, Pitch, and Roll of Each Component -->
		<Label x:Name="euler1" Content="" HorizontalAlignment="Left" Margin="240, 25, 0, 0" VerticalAlignment="Top" Height="30" Width="552"/>
		<Label x:Name="euler2" Content="" HorizontalAlignment="Left" Margin="240, 50, 0, 0" VerticalAlignment="Top" Height="30" Width="552"/>
		<Label x:Name="euler3" Content="" HorizontalAlignment="Left" Margin="240, 75, 0, 0" VerticalAlignment="Top" Height="30" Width="552"/>

		<!-- Engie Flag(Which Engine is firing) -->
		<Label x:Name="engflag" Content="" HorizontalAlignment="Left" Margin="240,35,0,0" VerticalAlignment="Top" Height="30" Width="552"/>

		<!-- Left Side of the UI -->

		<Button x:Name="alti_btn" Content="Altimeter" TextElement.FontSize="40px" HorizontalAlignment="Left" VerticalAlignment="Top" Width="210" Height="105"/>
		<Button x:Name="rotation_btn" Content="Rotation" TextElement.FontSize="40px" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,105,0,0" Width="210" Height="105"/>
		<Button x:Name="pos_btn" Content="Position" TextElement.FontSize="40px" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,105" Width="210" Height="105"/>
		<Button x:Name="staging_btn" Content="Staging" TextElement.FontSize="40px" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="210" Height="105"/>

		<Button x:Name="restore_btn" Content="Restore View to Default" TextElement.FontSize="40px" HorizontalAlignment="Left"  Margin="210,306,0,0" Width="582"/>

		<Label x:Name="alti_las_lbl" Content="" HorizontalAlignment="Left" TextElement.FontSize="20px" Margin="266,25,0,0" VerticalAlignment="Top"/>
		<Label x:Name="alti_cm_lbl" Content="" HorizontalAlignment="Left" TextElement.FontSize="20px" Margin="480,25,0,0" VerticalAlignment="Top"/>
		<Label x:Name="alti_bstr_lbl" Content="" HorizontalAlignment="Left" TextElement.FontSize="20px" Margin="670,25,0,0" VerticalAlignment="Top"/>

	</Grid>
</Window>
